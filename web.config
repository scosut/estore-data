<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<system.webServer>
		<defaultDocument enabled="true">
		 <files>
			<add value="index.php" />
		 </files>
		</defaultDocument>
		<rewrite>
			<rules>
				<rule name="GotoProduct" stopProcessing="true">
					<match url="^api/product$" ignoreCase="true" />
					<action type="Rewrite" url="/api/product/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoProductDetails" stopProcessing="true">
					<match url="^api/product/details/?id=\d+$" ignoreCase="true" />
					<action type="Rewrite" url="/api/product/details/index.php" appendQueryString="true" />
				</rule>
				<rule name="GotoAddProduct" stopProcessing="true">
					<match url="^api/product/add$" ignoreCase="true" />
					<action type="Rewrite" url="/api/product/add/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoUpdateProduct" stopProcessing="true">
					<match url="^api/product/update$" ignoreCase="true" />
					<action type="Rewrite" url="/api/product/update/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoDeleteProduct" stopProcessing="true">
					<match url="^api/product/delete$" ignoreCase="true" />
					<action type="Rewrite" url="/api/product/delete/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoAddReview" stopProcessing="true">
					<match url="^api/review/add$" ignoreCase="true" />
					<action type="Rewrite" url="/api/review/add/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoLoginUser" stopProcessing="true">
					<match url="^api/user/login$" ignoreCase="true" />
					<action type="Rewrite" url="/api/user/login/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoRegisterUser" stopProcessing="true">
					<match url="^api/user/register$" ignoreCase="true" />
					<action type="Rewrite" url="/api/user/register/index.php" appendQueryString="false" />
				</rule>
				<rule name="GotoUpdateUser" stopProcessing="true">
					<match url="^api/user/update$" ignoreCase="true" />
					<action type="Rewrite" url="/api/user/update/index.php" appendQueryString="false" />
				</rule>
			</rules>
		</rewrite>		
	</system.webServer>
</configuration>